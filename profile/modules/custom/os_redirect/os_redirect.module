<?php

/**
 * @file
 * Hook implementations for the os_redirect module.
 */

use Drupal\redirect\Entity\Redirect;
use Drupal\Core\Form\FormStateInterface;

/**
 * Implements hook_redirect_matched_redirect_alter().
 */
function os_redirect_redirect_matched_redirect_alter(&$redirect) {
  if (empty($redirect)) {
    return;
  }

  $vsite_context_manager = Drupal::getContainer()->get('vsite.context_manager');
  /** @var \Drupal\group\Entity\GroupInterface $group */
  if ($group = $vsite_context_manager->getActiveVsite()) {
    $exist_redirect = $group->getContentEntities('group_entity:redirect', ['entity_id' => $redirect->id()]);
    // If current redirect is not in vsite, set to NULL
    // (prevent global redirect in all vsite).
    if (empty($exist_redirect)) {
      $redirect = NULL;
      return;
    }
  }

  if ($redirect && Drupal::currentUser()->hasPermission('ignore redirects')) {
    Drupal::messenger()->addWarning(t('You are redirected to: @uri', ['@uri' => $redirect->getRedirectUrl()->toString()]));
    $redirect = NULL;
    return;
  }
}

/**
 * Implements hook_redirect_path_alter().
 */
function os_redirect_redirect_path_alter(&$path) {
  /** @var \Drupal\vsite\Plugin\VsiteContextManagerInterface $vsiteContextManager */
  $vsiteContextManager = Drupal::service('vsite.context_manager');
  // To check if node/publication page or not.
  $flag = strpos($path, 'node') !== FALSE || strpos($path, 'bibcite') !== FALSE;
  if (($group = $vsiteContextManager->getActiveVsite()) && !$flag) {
    $path = '[vsite:' . $group->id() . ']/' . $path;
  }
}

/**
 * Implements hook_redirect_insert().
 */
function os_redirect_redirect_insert(Redirect $redirect) {
  os_redirect_assign_to_vsite($redirect);
}

/**
 * Implements hook_redirect_update().
 */
function os_redirect_redirect_update(Redirect $redirect) {
  os_redirect_assign_to_vsite($redirect);
}

/**
 * Assign redirects to a group.
 *
 * @param \Drupal\redirect\Entity\Redirect $redirect
 *   Redirect to assign to the group.
 */
function os_redirect_assign_to_vsite(Redirect $redirect) {
  /** @var \Drupal\vsite\Plugin\VsiteContextManagerInterface $vsiteContextManager */
  $vsiteContextManager = \Drupal::service('vsite.context_manager');
  if (($group = $vsiteContextManager->getActiveVsite()) && !$vsiteContextManager->getActiveVsite()->getContentByEntityId('group_entity:redirect', $redirect->id())) {
    $group->addContent($redirect, 'group_entity:redirect');
  }
}

/**
 * Implements hook_form_redirect_redirect__form_alter().
 */
function os_redirect_form_redirect_redirect__form_alter(&$form, FormStateInterface $form_state) {
  $form['actions']['submit']['#submit'][] = 'os_redirect_form_redirect_redirect__form_submit';
}

/**
 * Do redirect on redirect creation.
 */
function os_redirect_form_redirect_redirect__form_submit(&$form, FormStateInterface $form_state) {
  $form_state->setRedirect('os_redirect.list');
}
